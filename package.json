{
  "name": "scholarsuite",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "v20",
    "npm": "v10"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint:js": "next lint --cache-strategy=content --cache-location=.eslintjscache",
    "lint:css": "stylelint \"**/*.css\" --cache --cache-strategy=content --cache-location=.stylelintcache",
    "prettier": "prettier --write . --cache --cache-strategy=content --cache-location=.prettiercache",
    "prettier:check": "prettier --check . --cache --cache-strategy=content --cache-location=.prettiercache",
    "type-check": "tsc --noEmit",
    "format": "turbo run lint:js lint:css -- --fix && turbo run prettier -- --write",
    "storybook": "BUILD_ENV=storybook storybook dev -p 6006 --quiet --no-open",
    "storybook:build": "BUILD_ENV=storybook storybook build",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:format": "prisma format",
    "db:seed-dev": "node --no-warnings --loader=nodejs-loaders/dev/alias --loader=nodejs-loaders/dev/tsx prisma/seed-dev.ts",
    "db:seed-prod": "node --no-warnings --loader=nodejs-loaders/dev/alias --loader=nodejs-loaders/dev/tsx prisma/seed-prod.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "~5.19.1",
    "@radix-ui/react-avatar": "~1.1.0",
    "@radix-ui/react-dialog": "~1.1.1",
    "@radix-ui/react-dropdown-menu": "~2.1.1",
    "@radix-ui/react-popover": "~1.1.1",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "~2.1.1",
    "@radix-ui/react-tabs": "~1.1.0",
    "@radix-ui/react-toast": "~1.2.1",
    "classnames": "~2.5.1",
    "lucide-react": "~0.445.0",
    "next": "~14.2.13",
    "next-auth": "~5.0.0-beta.22",
    "next-intl": "~3.20.0",
    "nodejs-loaders": "~1.0.0",
    "prisma": "~5.19.1",
    "react": "~18.3.1",
    "react-dom": "~18.3.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "~8.3.2",
    "@storybook/addon-essentials": "~8.3.2",
    "@storybook/addon-interactions": "~8.3.2",
    "@storybook/addon-links": "~8.3.2",
    "@storybook/addon-themes": "~8.3.2",
    "@storybook/nextjs": "~8.3.2",
    "@storybook/react": "~8.3.2",
    "@testing-library/react": "^16.0.1",
    "@types/node": "~20.16.5",
    "@types/react": "~18.3.8",
    "@types/react-dom": "~18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.1",
    "autoprefixer": "~10.4.19",
    "eslint": "~8.57.0",
    "eslint-config-next": "~14.2.13",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-storybook": "~0.8.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.2.10",
    "postcss": "~8.4.40",
    "prettier": "~3.3.3",
    "prettier-plugin-tailwindcss": "~0.6.6",
    "storybook": "~8.3.2",
    "stylelint-config-standard": "~36.0.1",
    "stylelint-order": "~6.0.4",
    "stylelint-selector-bem-pattern": "~4.0.1",
    "tailwindcss": "~3.4.12",
    "turbo": "~2.1.2",
    "typescript": "~5.6.2",
    "vitest": "~2.1.1"
  },
  "packageManager": "npm@10.7.0"
}
